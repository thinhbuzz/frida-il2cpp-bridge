{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [ "ES2022" ],
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceRoot": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "plugins": [ 
      { "transform": "ts-transformer-inline-file/transformer" }
    ]
  }
}
